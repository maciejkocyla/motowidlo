<h2>Nowy użytkownik: </h2>
  <h3 style = "float: right;">masz już konto? <%= link_to "zaloguj się", '#' %></h3>

<br/>
    <%= form_for(@user) do |usr| %>
      <%= render 'shared/error_messages'%>

        <div class = "row">
          <div class = "col-md-3 col-md-offset-1 form_labels">
            <%= usr.label "Nazwa" %>
            <br/>
            <%= usr.label "Email" %>
            <br/>
            <%= usr.label "Hasło" %>
            <br/>
            <%= usr.label "Potwierdź hasło" %>
          </div>
          <div class = "col-md-4 form_fields">
            <%= usr.text_field :name %>
            <br/>
            <%= usr.text_field :email %>
            <br/>
            <%= usr.password_field :password %>
            <br/>
            <%= usr.password_field :password_confirmation %>
            <br/>
          </div>
        </div> <br/>
          
        <div class = "row">
          <h3>Twoje zainteresowania:</h3><h6>(opcjonalnie)</h6>
            <% Category.all.each do |cat| %>
              <div class = "col-md-3 form_fields">
                <% if !main_categories.include?(cat) %>
                  <%= check_box_tag "categories[]", cat.id %>
                  <%= label_tag cat.name%>
                <% end %>
              </div>
            <% end %>
          </div>
          <br/><br/>

          <div class = "col-md-2">
            <%= usr.submit "Utwórz konto", class: "btn" %>
          </div>


    <% end %>
    <br/>

