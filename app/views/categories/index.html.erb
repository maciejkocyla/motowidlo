<div class = "row">
  
  <div class = "col-md-3">
    <h2>Kategorie: </h2>
  <% main_categories.each do |category| %>
    <div class = "category_box">
      <%= image_tag category.imageUrl, width: 20, height: 20, class: "category_image" unless category.imageUrl.nil? %>
      <%= link_to category.name, category %>
      <div class = "category_options">
        <% if root? %>
          <%= link_to 'Edit', edit_category_path(category) %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  <% end %>
  <br>
  <% if root? %>
    <%= link_to 'nowa kategoria', new_category_path %>
  <% end %>
</div>

