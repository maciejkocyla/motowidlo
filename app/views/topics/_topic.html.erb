<div class = "topic_in_index row topic_in_index_<%= Random.new.rand(1..3) %>">
  <div class = "col-md-10">
    <div class = "col-md-1"> 
      <% if topic.hot? %>
        <%= image_tag "https://cdn4.iconfinder.com/data/icons/cia-operations/512/flame-512.png" %>
      <% elsif %>
        <%= image_tag "https://cdn3.iconfinder.com/data/icons/eldorado-stroke-weather/40/fog-512.png" %>
      <% end %>
    </div>
    <%= link_to topic.name.truncate(40), category_topic_path(topic.category, topic) %>
  </div>
  <div class = "col-md-1">
    <%= image_tag "https://cdn1.iconfinder.com/data/icons/large-black-icons/512/Message_chat_text_bubble_phone.png" %>
    <% if !topic.heading.empty? %>
      <%= topic.posts.count + 1 %>
    <% else %>
      <%= topic.posts.count %>
    <% end %>
  </div>
  <div class = "col-md-1"> 
    <%= image_tag "https://cdn2.iconfinder.com/data/icons/picons-essentials/71/users-512.png" %>
    <%= topic.debaters.count %>
    <% if root? %>
      <%= link_to raw("<span class = 'glyphicon glyphicon-trash'></span>
"), category_topic_path(topic.category, topic), method: :delete %>
    <% end %>
  </div>
  <br/>
  <% if topic.heading? %>
    <div class = "topic_heading_in_index col-md-12">
      <%= topic.heading.truncate(90) %>
    </div>
  <% end %>
</div>

